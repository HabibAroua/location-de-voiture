{% extends 'base.html.twig' %}
{% block title %}Modifier Voiture{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Modifier Voiture</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="col-md-3 col-sm-3 col-xs-12 profile_left">
                        <div class="profile_img">
                            <div id="crop-avatar">
                                <!-- Current avatar -->
                                {% if voiture.image is null %}
                                    <img class="img-responsive avatar-view" src="{{ asset('uploads/images/no_avatar.jpg') }}" alt="Avatar">
                                {% else %}
                                    <img class="img-responsive avatar-view" src="{{ asset( '/uploads/images/'~voiture.id ~'/' ~ voiture.image ) }}" alt="Avatar">
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9 col-sm-9 col-xs-12">
                        {{ form_start(form,{'attr': {'class':'form-horizontal form-label-left'}}) }}

                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Matricule :<span class="required"> *</span> </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(form.matricule,{'attr': {'class':'form-control col-md-7 col-sm-7 col-xs-12','id':"name" ,'data-validate-length-range':'2','data-validate-words':'1'}}) }}
                            </div>
                        </div>

                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Modele :<span class="required"> *</span> </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(form.modele,{'attr': {'class':'form-control col-md-7 col-sm-7 col-xs-12'}}) }}
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Moteur :<span class="required"> *</span> </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(form.moteur,{'attr': {'class':'form-control col-md-7 col-sm-7 col-xs-12'}}) }}
                            </div>
                        </div>

                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Costructeur :<span class="required"> *</span> </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(form.constructeur,{'attr': {'class':'form-control col-md-7 col-sm-7 col-xs-12'}}) }}
                            </div>
                        </div>

                        <div class="item form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12">Image : </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                {{ form_widget(form.file,{'attr': {'class':'form-control col-md-7 col-sm-7 col-xs-12'}} ) }}
                            </div>
                        </div>

                        <div class="ln_solid"></div>
                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-3">
                                <button type="submit" class="btn btn-primary">Annuler</button>

                                <button id="send" type="submit" class="btn btn-success"><i class="fa fa-save"></i> Enregistrer</button>
                                <a href="{{ path('Voiture') }}" id="send" type="button" class="btn btn-warning"><i class="fa fa-mail-reply"></i> Retour Ã  la liste</a>

                            </div>
                        </div>

                        {{ form_end(form) }}

                </div>
            </div>
        </div>
        </div>
    </div>

{% endblock body %}



